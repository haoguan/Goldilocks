<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10" >

    <ImageView
        android:id="@+id/iv_yelp_result_image"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="top|center"
        android:layout_margin="10dp"
        android:layout_weight="3"
        android:src="@drawable/test" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_yelp_result_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center|left"
            android:text="Mr. Taco"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:weightSum="10" >

            <ImageView
                android:id="@+id/iv_yelp_result_rating"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:src="@drawable/stars" />

            <TextView
                android:id="@+id/tv_yelp_result_reviews"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="42 Reviews"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_yelp_result_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center|left"
            android:text="3930 Decoto Rd, Fremont"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_yelp_result_categories"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center|left"
            android:text="Mexican, Food Stands"
            android:textColor="@color/goldilocksTextGray"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_yelp_distance"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="14 mi"
        android:textSize="15sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/et_search_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/search_border"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp" >
        
        
        <Button
            android:id="@+id/b_search_bar_list"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/list"
            android:visibility="gone" />
        
        <Button
            android:id="@+id/b_search_bar_options"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/options"
            android:layout_toRightOf="@+id/b_search_bar_list"
            android:layout_alignBaseline="@+id/b_search_bar_list"
            android:layout_marginLeft="15dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/b_search_bar_x"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/x"
            android:layout_toRightOf="@+id/b_search_bar_options"
            android:layout_alignBaseline="@+id/b_search_bar_options"
            android:layout_marginLeft="15dp"
            android:visibility="gone" />
    </RelativeLayout>

</FrameLayout>